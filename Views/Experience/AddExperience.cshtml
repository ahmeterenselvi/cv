@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<form asp-action="AddExperience" asp-controller="Experience" method="post" class="form">
    <div class="form-group">
        <label for="Title" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Name...">
    </div>
    <div class="form-group">
        <label for="Value" class="form-label">Date</label>
        <input type="text" class="form-control" asp-for="Date" placeholder="Date...">
    </div>
    <div class="form-group">
        <label for="Value" class="form-label">Image Url</label>
        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Image Url...">
    </div>
    <div class="form-group">
        <label for="Value" class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" placeholder="Description...">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
