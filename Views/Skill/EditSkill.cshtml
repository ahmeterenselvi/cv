@model EntityLayer.Concrete.Skill

@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<form asp-action="EditSkill" asp-controller="Skill" method="post" class="form">
    <div class="form-group">
        <label for="Title" class="form-label">Skill Title</label>
        <input type="text" class="form-control" asp-for="Title" placeholder=@Model.Title>
    </div>
    <div class="form-group">
        <label for="Value" class="form-label">Skill Value</label>
        <input type="text" class="form-control" asp-for="Value" placeholder=@Model.Value>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

