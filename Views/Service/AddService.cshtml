@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<form asp-action="AddService" asp-controller="Service" method="post" class="form">
    <div class="form-group">
        <label for="Title" class="form-label">Service Title</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Service Title...">
    </div>
    <div class="form-group">
        <label for="Value" class="form-label">Service Image</label>
        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Service Image...">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
