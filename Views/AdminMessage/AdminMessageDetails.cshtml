@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Message Details</h4>
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th>Id:</th>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <th>Sender Mail:</th>
                        <td>@Model.Sender</td>
                    </tr>
                    <tr>
                        <th>Sender Name:</th>
                        <td>@Model.SenderName</td>
                    </tr>
                    <tr>
                        <th>Receiver Mail:</th>
                        <td>@Model.Receiver</td>
                    </tr>
                    <tr>
                        <th>Receiver Name:</th>
                        <td>@Model.ReceiverName</td>
                    </tr>
                    <tr>
                        <th>Subject:</th>
                        <td>@Model.Subject</td>
                    </tr>
                    <tr>
                        <th>Content:</th>
                        <td>@Model.MessageContent</td>
                    </tr>
                    <tr>
                        <th>Date:</th>
                        <td>@Model.Date</td>
                    </tr>
                    <tr>
                        <th>Received Message</th>
                        <td><a href="/AdminMessage/ReceiverMessageList/" class="btn btn-outline-primary">Go</a></td>
                    </tr>
                    <tr>
                        <th>Sent Messages</th>
                        <td><a href="/AdminMessage/SenderMessageList/" class="btn btn-outline-primary">Go</a></td>
                    </tr>
                </table>
                <a asp-action="AdminMessageSend" class="btn btn-outline-behance">Send a Message</a>
            </div>
        </div>
    </div>
</div>