@model List<WriterMessage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Messages</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Sender</th>
                            <th>Subject</th>
                            <th>Date</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var value in Model)
                        {
                            <tr>
                                <th>@value.Id</th>
                                <td>@value.Sender</td>
                                <td>@value.Subject</td>
                                <td>@value.Date</td>
                                <td>
                                    <a href="/AdminMessage/AdminMessageDetails/@value.Id" class="btn btn-outline-behance">Details</a>
                                    <a href="/AdminMessage/AdminMessageDelete/@value.Id" class="btn btn-outline-warning">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tr>
                        <th>Sent Messages</th>
                        <td><a href="/AdminMessage/SenderMessageList/" class="btn btn-outline-primary">Go</a></td>
                    </tr>
                </table>
                <a asp-action="AdminMessageSend" class="btn btn-outline-behance">Send a Message</a>
            </div>
        </div>
    </div>
</div>

