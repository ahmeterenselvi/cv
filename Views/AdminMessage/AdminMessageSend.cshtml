@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Send a Message</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Receiver</label>
                    <input type="email" class="form-control" asp-for="Receiver" placeholder="Receiver">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Subject</label>
                    <input type="text" class="form-control" asp-for="Subject" placeholder="Subject">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Content</label>
                    <input type="text" class="form-control" asp-for="MessageContent" placeholder="Content">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Send</button>
                <a class="btn btn-light" href="/AdminMessage/SenderMessageList">Cancel</a>
            </form>
        </div>
    </div>
</div>
