@model EntityLayer.Concrete.Message

<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
    <div class="bg-light my-2 p-3 pt-2">
        <form asp-action="SendMessage" asp-controller="Default" method="POST">
            <div class="form-group my-2">
                <label for="name" class="form-label fw-bolder">Name</label>
                <input type="text" asp-for="Name" class="form-control" id="name" required>
            </div>
            <div class="form-group my-2">
                <label for="email" class="form-label fw-bolder">Email</label>
                <input type="text" asp-for="Mail" class="form-control" id="email" required >
            </div>
            <div class="form-group my-2">
                <label for="message" class="form-label fw-bolder">Message</label>
                <textarea style="resize: none;" id="message" rows="4" asp-for="Content" class="form-control" required></textarea>
            </div>
            <button class="btn btn-primary mt-2">Send</button>
        </form>
    </div>
</div>