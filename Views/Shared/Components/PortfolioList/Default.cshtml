@using EntityLayer.Concrete
@model List<Portfolio>

<div class="section px-2 px-lg-4 pt-5" id="portfolio">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Portfolio </h2>
        </div>
        <div class="grid bp-gallery pb-3" data-aos="zoom-in-up" data-aos-delay="100">
            <div class="grid-sizer"></div>
            @foreach (var value in Model)
            {
                <div class="grid-item">
                    <a href="@value.ProjectUrl">
                        <figure class="portfolio-item">
                            <img src="@value.ImageUrl" data-bp="@value.ImageUrl2" />
                            <figcaption>
                                <h4 class="h5 mb-0">@value.Name</h4>
                                <div>@value.ProjectUrl</div>
                            </figcaption>
                        </figure>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
