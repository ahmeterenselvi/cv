@using EntityLayer.Concrete
@model EntityLayer.Concrete.ToDoList

<div class="col-md-12 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">To do list</h4>
            <form asp-action="Index" asp-controller="Dashboard" method="post">
                <div class="add-items d-flex">
                    <input asp-for="Content" type="text" class="form-control todo-list-input" placeholder="Enter task..">
                    <button class="add btn btn-primary todo-list-add-btn" type="submit">Add</button>
                </div>
            </form>
            <div class="list-wrapper">
                <ul class="d-flex flex-column-reverse text-white todo-list todo-list-custom">
                    @foreach (var value in ViewBag.liste)
                    {
                        <li>
                            <div class="form-check form-check-primary">
                                <label class="form-check-label">
                                    <input class="checkbox" type="checkbox" @(value.Status ? "checked" : "")> @value.Content
                                </label>
                            </div>
                            <i class="remove mdi mdi-close-box"></i>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
