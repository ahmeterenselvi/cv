@model List<WriterMessage>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Messages</h6>
    <div class="dropdown-divider"></div>
    @foreach (var value in Model)
    {
        <a class="dropdown-item preview-item" href="/AdminMessage/AdminMessageDetails/@value.Id">
            <div class="preview-thumbnail">
                <img src="#" alt="@value.SenderName" class="rounded-circle profile-pic">
            </div>
            <div class="preview-item-content">
                <p class="preview-subject ellipsis mb-1">@value.SenderName send you a message</p>
                <p class="text-muted mb-0"> @((DateTime.Now - value.Date).Minutes) Minutes ago </p>
            </div>
        </a>
        <div class="dropdown-divider"></div>
    }
    <p class="p-3 mb-0 text-center">@ViewBag.MessageCount new messages</p>
</div>