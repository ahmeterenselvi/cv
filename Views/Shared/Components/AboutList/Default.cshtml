@using EntityLayer.Concrete
@model List<About>

<div class="section pt-4 px-3 px-lg-4" id="about">
    <div class="container-narrow">
        @foreach (var value in Model)
        {
            <div class="row">
                <div class="col-md-6">
                    <h2 class="h4 my-2">Hello! I’m @value.Title</h2>
                    <p>@value.Description</p>
                    <div class="row mt-3">
                        <div class="col-sm-2">
                            <div class="pb-1">Age:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@value.Age</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Email:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@value.Mail</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Phone:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@value.Phone</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Address:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@value.Address</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100"><img class="avatar img-fluid mt-2" src="@value.ImageUrl" width="400" height="400" alt="Ahmet Eren Selvi" /></div>
            </div>
        }
    </div>
</div>
