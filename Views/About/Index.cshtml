@model EntityLayer.Concrete.About

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <form asp-action="Index" asp-controller="About" method="post" class="form">
            <div class="form-group">
                <label for="Title" class="form-label">Title</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="@Model.Title">
            </div>
            <div class="form-group">
                <label for="Description" class="form-label">Description</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="@Model.Description">
            </div>
            <div class="form-group">
                <label for="Age" class="form-label">Age</label>
                <input type="text" class="form-control" asp-for="Age" placeholder="@Model.Age">
            </div>
            <div class="form-group">
                <label for="Mail" class="form-label">Mail</label>
                <input type="email" class="form-control" asp-for="Mail" placeholder="@Model.Mail">
            </div>
            <div class="form-group">
                <label for="Phone" class="form-label">Phone</label>
                <input type="text" class="form-control" asp-for="Phone" placeholder="@Model.Phone">
            </div>
            <div class="form-group">
                <label for="Address" class="form-label">Address</label>
                <input type="text" class="form-control" asp-for="Address" placeholder="@Model.Address">
            </div>
            <div class="form-group">
                <label for="ImageUrl" class="form-label">Image URL</label>
                <div class="input-group">
                    <input type="text" class="form-control" asp-for="ImageUrl" placeholder="@Model.ImageUrl">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>