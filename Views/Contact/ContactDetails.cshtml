@model EntityLayer.Concrete.Message

@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Message Details</h4>
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th>Name:</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>Mail:</th>
                        <td>@Model.Mail</td>
                    </tr>
                    <tr>
                        <th>Content:</th>
                        <td>@Model.Content</td>
                    </tr>
                    <tr>
                        <th>Date:</th>
                        <td>@Model.Date</td>
                    </tr>
                    <tr>
                        <th>Status:</th>
                        <td>
                            @if (Model.Status)
                            {
                            <label class="badge badge-success">@Model.Status</label>
                            }
                            else
                            {
                            <label class="badge badge-danger">@Model.Status</label>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Back</th>
                        <td><a asp-action="Index" class="btn btn-outline-primary">Back</a></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>