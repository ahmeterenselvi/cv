@model List<WriterMessage>

@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Messages</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Sender</th>
                            <th>Receiver</th>
                            <th>Subject</th>
                            <th>Date</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var value in Model)
                        {
                            <tr>
                                <th>@value.Id</th>
                                <td>@value.Sender</td>
                                <td>@value.Receiver</td>
                                <td>@value.Subject</td>
                                <td>@value.Date</td>
                                <td><a href="/User/Message/MessageDetails/@value.Id" class="btn btn-outline-behance">Details</a></td>
                            </tr>
                        }
                    </tbody>
                    <tr>
                        <th>Send a Message</th>
                        <td><a href="/User/Message/SendMessage/" class="btn btn-outline-primary">Go</a></td>
                    </tr>
                    <tr>
                        <th>Received Message</th>
                        <td><a href="/User/Message/ReceiverMessage/" class="btn btn-outline-primary">Go</a></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
