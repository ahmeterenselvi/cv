@model EntityLayer.Concrete.Announcement

@{
    ViewData["Title"] = "AnnouncementDetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Announcement Details</h4>
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th>Id:</th>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <th>Title:</th>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <th>Content:</th>
                        <td>@Model.Content</td>
                    </tr>
                    <tr>
                        <th>Date:</th>
                        <td>@Model.Date</td>
                    </tr>
                    <tr>
                        <th>Status:</th>
                        <td>
                            @if (Model.Status == "Aktif")
                            {
                                <label class="badge badge-success">@Model.Status</label>
                            }
                            else
                            {
                                <label class="badge badge-danger">@Model.Status</label>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Back</th>
                        <td><a href="/User/Default/Index/" class="btn btn-outline-primary">Back</a></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
