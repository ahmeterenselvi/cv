@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Announcements</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var value in Model)
                        {
                            <tr>
                                <th>@value.Id</th>
                                <td>@value.Title</td>
                                <td>@value.Content</td>
                                <td>@value.Date</td>
                                <td>
                                    @if (value.Status == "Aktif")
                                    {
                                        <label class="badge badge-success">@value.Status</label>
                                    }
                                    else
                                    {
                                        <label class="badge badge-danger">@value.Status</label>
                                    }
                                </td>
                                <td><a href="/User/Default/AnnouncementDetails/@value.Id" class="btn btn-outline-behance">Details</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
